{
    "name": "php-fidder/core",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PhpFidder\\Core\\": "src/"
        }
    },
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "php-di/php-di": "^6.4",
        "mustache/mustache": "^2.14",
        "laminas/laminas-diactoros": "^2.22",
        "laminas/laminas-httphandlerrunner": "^2.4",
        "league/route": "^5.1",
        "monolog/monolog": "^3.2",
        "league/event": "^3.0",
        "symfony/mailer": "^6.2",
        "vlucas/phpdotenv": "^5.5",
        "ramsey/uuid": "^4.7",
        "laminas/laminas-session": "^2.16"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "fix-style": "PHP_CS_FIXER_IGNORE_ENV=1 php vendor/bin/php-cs-fixer fix --config .php-cs-fixer.php"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.13",
        "symfony/var-dumper": "^6.2"
    }
}
