{{% BLOCKS }}
{{< layout/index }}
    {{$ title }}Login{{/ title }}
    {{$ content }}
        <section class="box">
            <h2 class="title">Login</h2>
            {{#hasErrors}}
                <div class="notification is-danger">
                    {{#errors}}
                        <p> {{.}}</p>
                    {{/errors}}
                </div>
            {{/hasErrors}}

            <form method="POST">
                <div class="field">
                    <div class="label">
                        <label class="label" for="username">Username</label>
                    </div>
                    <div class="control">
                        <input class="input" type="text" id="username" name="username" placeholder="Username"
                               value="{{username}}">
                    </div>
                </div>
                <div class="field">
                    <div class="label">
                        <label class="label" for="password">Password</label>
                    </div>
                    <div class="control">
                        <input class="input" id="password" type="password" name="password"
                               placeholder="Password"
                               value="{{password}}">
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <button class="button is-primary">Login</button>
                        <a href="/" class="button">Abbrechen</a>
                    </div>
                </div>
            </form>
        </section>
    {{/ content }}
{{/ layout/index }}